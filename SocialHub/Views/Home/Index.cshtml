

<div class="card-deck">
    @foreach (var user in Model)
    {

        var photoPath = "~/Images/" + (user.PhotoPath ?? "mage.png");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@user.FirstName @user.LastName</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@user.Id" class="btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>